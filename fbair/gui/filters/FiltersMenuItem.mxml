<!-- A filter in the menu -->
<mx:HBox xmlns:mx="http://www.adobe.com/2006/mxml"
         xmlns:util="fbair.util.display.*"
         styleName="{hovering ? 'filterItemOver' : 'filterItemOut'}"
         creationComplete="creationComplete(event)"
         buttonMode="true"
         mouseChildren="false" >
  <util:SpritedImage source="{data.icon_url}"
                     width="16"
                     height="16"
                     offsetX="{hovering ? 0 : 16}" />

  <mx:Label styleName="{hovering ?
                       'filterItemLabelOver' : 'filterItemLabelOut'}"
            text="{data.name}" />

  <mx:Script><![CDATA[
    import flash.events.Event;
    import flash.events.MouseEvent;

    [Bindable] private var hovering:Boolean = false;

    private function creationComplete(event:Event):void {
      addEventListener(MouseEvent.ROLL_OVER, rollOver);
      addEventListener(MouseEvent.ROLL_OUT, rollOut);
    }

    private function rollOver(event:MouseEvent):void {
      hovering = true;
    }

    private function rollOut(event:Event):void {
      hovering = false;
    }
  ]]></mx:Script>
</mx:HBox>